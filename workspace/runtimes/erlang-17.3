#!/usr/bin/env bash
# Build Path: /app/.heroku/otp/

OUT_PREFIX=$1

echo "Building Erlang..."
SOURCE_TARBALL='https://github.com/erlang/otp/archive/OTP-17.3.tar.gz'
mkdir src
curl -L $SOURCE_TARBALL | tar xz -C src

cd src
for i in jinterface megaco; do
  touch lib/${i}/SKIP
  echo "Disabling ${i}"
done
./otp_build all -a ${REL_DIR}

cd ..
rm -fr src
